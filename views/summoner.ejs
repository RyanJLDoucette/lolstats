<% include ./partials/header.ejs %>
<div class="ui segment">
    <div class="ui two column very relaxed grid">
        <div class="column">
            <div class="ui one column center aligned grid">
                <div class="left aligned column">
                    <div class="ui grid">
                        <div class="row">
                            <div class="three wide column">
                                <img class="ui tiny rounded image" src="http://ddragon.leagueoflegends.com/cdn/9.1.1/img/profileicon/<%=summoner.icon%>.png">
                            </div>
                            <div class="thirteen wide column">
                                <span>
                                    <div>
                                        <h1><strong>
                                                <%= summoner.name %></strong></h1>
                                    </div>
                                    <div>
                                        <p class="light">Level:
                                            <%= summoner.level %>
                                        </p>
                                    </div>
                                </span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="column">
                    <div class="ui divider" style="margin-top: -1em">

                    </div>
                    <img class="ui centered small image" src="../img/emblems/gold_emblem.png">
                </div>
                <div class="column">
                    <p><strong>
                            <%= summoner.rank.tier %>
                            <%= summoner.rank.division %>
                            <%= summoner.rank.lp %>lp</strong></p>
                </div>
                <div class="column">
                    <p>
                        <%= summoner.wins %><span id="blueTeam">W</span>
                        <%= summoner.losses %><span id="redTeam">L</span>
                    </p>
                    <p>Games Played:
                        <%= summoner.wins + summoner.losses %>
                    </p>
                </div>
                <div class="column">
                    <div id="chartContainer" style="height: 200px; width: 100%;"></div>
                </div>
            </div>
        </div>
        <div class="column">
            <div class="ui two column grid">
                <div class="row">
                    <div class="column">
                        <img class="ui test rounded image" src="http://ddragon.leagueoflegends.com/cdn/6.24.1/img/champion/Aatrox.png">
                    </div>
                    <div class="column">
                        <p>Aatrox</p>
                        <p class="light">2.5:1 KDA</p>
                        <p class="light">12.1-4.2-23.2</p>
                        <p class="light">121cs</p>
                    </div>
                </div>
                <div class="row">
                    <div class="column">
                        <img class="ui test rounded image" src="http://ddragon.leagueoflegends.com/cdn/6.24.1/img/champion/Aatrox.png">
                    </div>
                    <div class="column">
                        <p>Aatrox</p>
                        <p class="light">2.5:1 KDA</p>
                        <p class="light">12.1-4.2-23.2</p>
                        <p class="light">121cs</p>
                    </div>
                </div>
                <div class="row">
                    <div class="column">
                        <img class="ui test rounded image" src="http://ddragon.leagueoflegends.com/cdn/6.24.1/img/champion/Aatrox.png">
                    </div>
                    <div class="column">
                        <p>Aatrox</p>
                        <p class="light">2.5:1 KDA</p>
                        <p class="light">12.1-4.2-23.2</p>
                        <p class="light">121cs</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="ui vertical divider"></div>
</div>
<div class="ui one column centered grid" style="margin-top: 1em;">
    <form class="ui form" action="/match/<%= summoner.summonerId %>" method="GET">
        <div class="ui buttons">
            <button class="ui big primary button">Live Game</button>
            <button formaction="/" class="ui big orange button">Go Back</button>
        </div>
    </form>
</div>

<script>
    window.onload = function () {
        var chart = new CanvasJS.Chart("chartContainer", {
            animationEnabled: true,
            data: [{
                type: "doughnut",
                startAngle: 60,
                innerRadius: 50,
                indexLabelFontSize: 17,
                indexLabel: "{label} - #percent%",
                toolTipContent: "<b>{label}:</b> {y} (#percent%)",
                dataPoints: [
                    { y: 57, label: "Wins" },
                    { y: 50, label: "Losses" }
                ]
            }]
        });
        chart.render();
    }
</script>

